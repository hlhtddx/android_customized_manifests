<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote  name="lineage"
           fetch="https://github.com/"
           review="review.gerrithub.io"
           revision="lineage-15.1" />

<!-- Add lineage hardware like bcm gps -->
  <project path="hardware/lineage/interfaces" name="LineageOS/android_hardware_lineage_interfaces" remote="lineage" >
    <copyfile dest="hardware/lineage/Android.bp" src="Android.bp"/>
  </project>

<!-- Replace f2fs-tools with lineage version -->
  <remove-project path="external/f2fs-tools" name="platform/external/f2fs-tools" remote="aosp" />
  <project path="external/f2fs-tools" name="LineageOS/android_external_f2fs-tools" remote="lineage" />

<!-- Replace qcom hardware with lineage ones -->
  <remove-project path="hardware/qcom/audio" name="platform/hardware/qcom/audio" groups="qcom,qcom_audio,pdk" />
  <project path="hardware/qcom/audio" name="LineageOS/android_hardware_qcom_audio" groups="qcom,qcom_audio,pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/bootctrl" name="platform/hardware/qcom/bootctrl" groups="pdk" />
  <project path="hardware/qcom/bootctrl" name="LineageOS/android_hardware_qcom_bootctrl" groups="pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/bt" name="platform/hardware/qcom/bt" groups="qcom,pdk" />
  <project path="hardware/qcom/bt" name="LineageOS/android_hardware_qcom_bt" groups="qcom,pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/camera" name="platform/hardware/qcom/camera" groups="qcom_camera" />
  <project path="hardware/qcom/camera" name="LineageOS/android_hardware_qcom_camera" groups="qcom_camera"  remote="lineage" />

  <remove-project path="hardware/qcom/display" name="platform/hardware/qcom/display" groups="pdk,qcom,qcom_display" />
  <project path="hardware/qcom/display" name="LineageOS/android_hardware_qcom_display" groups="pdk,qcom,qcom_display"  remote="lineage" />

  <remove-project path="hardware/qcom/gps" name="platform/hardware/qcom/gps" groups="qcom,qcom_gps,pdk" />
  <project path="hardware/qcom/gps" name="LineageOS/android_hardware_qcom_gps" groups="qcom,qcom_gps,pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/keymaster" name="platform/hardware/qcom/keymaster" groups="qcom,qcom_keymaster,pdk" />
  <project path="hardware/qcom/keymaster" name="LineageOS/android_hardware_qcom_keymaster" groups="qcom,qcom_keymaster,pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/media" name="platform/hardware/qcom/media" groups="qcom,pdk" />
  <project path="hardware/qcom/media" name="LineageOS/android_hardware_qcom_media" groups="qcom,pdk"  remote="lineage" />

  <remove-project path="hardware/qcom/power" name="platform/hardware/qcom/power" groups="qcom,pdk" />
  <project path="hardware/qcom/power" name="LineageOS/android_hardware_qcom_power" groups="qcom,pdk"  remote="lineage" />

  <project path="hardware/qcom/fm" name="LineageOS/android_hardware_qcom_fm" groups="qcom,qcom_fm"  remote="lineage" />

  <remove-project path="hardware/qcom/wlan" name="platform/hardware/qcom/wlan" groups="qcom_wlan,pdk" />
  <project path="hardware/qcom/wlan" name="LineageOS/android_hardware_qcom_wlan" groups="qcom_wlan,pdk"  remote="lineage" />
</manifest>
